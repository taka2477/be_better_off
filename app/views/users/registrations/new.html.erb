<% provide(:title, 'ユーザー登録') %>

<div class="text-center">
  <h2>ユーザー登録</h2>
  <br>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.text_field :username, autofocus: true, placeholder: "ユーザー名" %>
    </div>
    <br>

    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス" %>
    </div>
    <br>

    <div class="field">
      <%= f.text_field :age, autofocus: true, placeholder: "年齢" %>
    </div>
    <br>

    <label><%= f.radio_button :gender, "男" %> 男 </label>
    <label><%= f.radio_button :gender, "女" %> 女 </label>

    <div class="field"><br>
      <% if @minimum_password_length %>
      <em>(パスワード <%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, placeholder: "パスワード" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, placeholder: "パスワード確認" %>
    </div>

    <br>
    <div class="actions">
      <%= f.submit "登録する" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
