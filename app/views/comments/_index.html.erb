<% comments.each do |comment| %>
  <% unless comment.id.nil? %>
    <%= link_to "#{comment.user.username}さん", user_path(comment.user.id) %>
  <%= comment.content %>
    <% if comment.user.id == current_user.id %>
      <%= link_to '削除', post_comment_path(comment.user.id, comment.id), method: :delete %>
    <% end %>
  <% end %>
<% end %>
