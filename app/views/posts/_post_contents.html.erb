<thead class="thead-dark text-center">
  <tr>
    <th scope="col" style="width: 20px">No.</th>
    <th scope="col" style="width: 250px">投稿タイトル(クリックで詳細)</th>
    <th scope="col" style="width: 100px">投稿者</th>
    <th scope="col" style="width: 40px">年齢</th>
    <th scope="col" style="width: 40px">性別</th>
    <th scope="col" style="width: 70px">予算</th>
    <th scope="col" style="width: 90px">投稿日</th>
    <th scope="col" style="width: 90px">更新日時</th>
  </tr>
</thead>
<tbody>
  <% posts.each do |post| %>
    <tr>
      <th scope="row"><%= post.id %></th>
      <td><%= link_to post.title, post_path(post.id) %></td>
      <td><%= link_to post.user.username, user_path(post.user_id) %></td>
      <td><%= post.user.age %></td>
      <td><%= post.user.gender %></td>
      <td>予算</td>
      <td><%= post.created_at.to_s(:datetime_base) %></td>
      <td><%= post.updated_at.to_s(:datetime_base) %></td>
    </tr>
  <% end %>
</tbody>
