<thead class="thead-dark">
  <tr>
    <th scope="col" style="width: 40px">No.</th>
    <th scope="col" style="width: 700px">投稿タイトル(クリックで詳細)</th>
    <th scope="col">名前</th>
    <th scope="col">年齢</th>
    <th scope="col">性別</th>
    <th scope="col">投稿日</th>
    <th scope="col">更新日時</th>
  </tr>
</thead>
<tbody>
  <% posts.each do |post| %>
    <tr>
      <th scope="row"><%= post.id %></th>
      <td><%= link_to post.title, post_path(post.id) %></td>
      <td><%= link_to post.name, user_path(post.id) %></td>
      <td>年齢</td>
      <td>性別</td>
      <td><%= post.created_at.to_s(:datetime_base) %></td>
      <td><%= post.updated_at.to_s(:datetime_base) %></td>
    </tr>
  <% end %>
</tbody>
